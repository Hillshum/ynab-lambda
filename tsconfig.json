{
    "extends": "@tsconfig/node20/tsconfig.json",
    "compilerOptions": {
        "sourceMap": true,
        "resolveJsonModule": true,
        "module": "nodenext",
        "esModuleInterop": true,
        "noImplicitAny": false,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ]
}